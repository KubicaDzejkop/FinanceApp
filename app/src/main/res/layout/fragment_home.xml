<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Dostępne środki -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/purple_500">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/light_violet">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dostępne środki"
                    android:textSize="18sp"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100,00PLN"
                    android:textSize="26sp"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Przycisk Dodaj transakcję (kółko) -->
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/purple_500">

            <ImageView
                android:id="@+id/btnAddTransaction"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/transaction"
                app:tint="@color/white"/>
        </FrameLayout>

        <!-- Historia transakcji (DYNAMICZNA) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/light_violet">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/light_violet">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ostatnie transakcje"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/btnShowMoreTransactions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Więcej"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- RecyclerView z tłem light violet -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentTransactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/light_violet"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Analiza finansowa -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAnalysis"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/light_violet">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_violet"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Analiza finansowa"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btnShowMoreAnalysis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Więcej"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Moje wydatki w tym miesiącu:"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMonthlySpending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="782,99pln"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Paski słupków finansowych: zielony NAD czerwonym! -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="8dp"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal">

                    <!-- Kwiecień -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:id="@+id/valueMarchIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+0.00"
                            android:textColor="@color/green2"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_marginBottom="4dp"/>
                        <!-- Słupki: zielony nad czerwonym -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom|center_horizontal">

                            <View
                                android:id="@+id/barMarchIn"
                                android:layout_width="20dp"
                                android:layout_height="60dp"
                                android:background="@color/green2" />

                            <View
                                android:id="@+id/barMarchOut"
                                android:layout_width="20dp"
                                android:layout_height="40dp"
                                android:background="@color/red2" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/valueMarchOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-0.00"
                            android:textColor="@color/red2"
                            android:textStyle="bold"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/labelMarch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kwiecień"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginBottom="20dp"
                            />
                    </LinearLayout>

                    <!-- Maj -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:id="@+id/valueAprilIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+0.00"
                            android:textColor="@color/green2"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_marginBottom="4dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom|center_horizontal">

                            <View
                                android:id="@+id/barAprilIn"
                                android:layout_width="20dp"
                                android:layout_height="60dp"
                                android:background="@color/green2" />

                            <View
                                android:id="@+id/barAprilOut"
                                android:layout_width="20dp"
                                android:layout_height="40dp"
                                android:background="@color/red2" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/valueAprilOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-0.00"
                            android:textColor="@color/red2"
                            android:textStyle="bold"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/labelApril"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maj"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginBottom="20dp"
                            />
                    </LinearLayout>

                    <!-- Czerwiec -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:id="@+id/valueMayIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+0.00"
                            android:textColor="@color/green2"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_marginBottom="4dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom|center_horizontal">

                            <View
                                android:id="@+id/barMayIn"
                                android:layout_width="20dp"
                                android:layout_height="60dp"
                                android:background="@color/green2" />

                            <View
                                android:id="@+id/barMayOut"
                                android:layout_width="20dp"
                                android:layout_height="40dp"
                                android:background="@color/red2" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/valueMayOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-0.00"
                            android:textColor="@color/red2"
                            android:textStyle="bold"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/labelMay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Czerwiec"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginBottom="20dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="64dp"/>
    </LinearLayout>
</ScrollView>