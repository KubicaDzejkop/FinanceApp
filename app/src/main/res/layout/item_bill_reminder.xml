<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp"
    android:paddingHorizontal="12dp">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tytuł"
        android:textSize="18sp"
        android:textColor="#222222"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:ellipsize="end"
        android:maxLines="1" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="6dp" />

    <LinearLayout
        android:id="@+id/layout_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data: 01.06.2025"
            android:textColor="#222222"
            android:textSize="15sp"
            android:paddingBottom="2dp" />

        <!-- NOWY TextView na kwotę -->
        <TextView
            android:id="@+id/text_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kwota: 0.00 PLN"
            android:textColor="#222222"
            android:textSize="15sp"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Nieopłacony"
            android:textColor="#D32F2F"
            android:textSize="15sp"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opis: Treść przypomnienia"
            android:textColor="#222222"
            android:textSize="15sp"
            android:paddingBottom="10dp" />

        <Button
            android:id="@+id/btn_paid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OZNACZ JAKO OPŁACONY"
            android:backgroundTint="#7300FF"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USUŃ PRZYPOMNIENIE"
            android:backgroundTint="#D32F2F"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>